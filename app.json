{
    "id": "eu.jeroensomhorst.feedreader",
    "name": {
        "en": "RSS Reader"
    },
    "description":{
      "en":"Simple RSS Reader",
      "nl":"Simpel RSS lezer"  
    },
    "images":{
        "large":"./assets/images/large.jpg",
        "small":"./assets/images/small.jpg"
    },
    "category":[
        "internet"
    ],
    "dependencies":{
        "request":"*"
    },
    "version": "1.0.2",
    "compatibility": "0.x || 1.x",
    "author": {
        "name": "Jeroen Somhorst",
        "email": "j.somhorst@gmail.com"
    },
    "permissions": [
        "homey:manager:speech-output"
    ],
    "flow":{
        "actions":[
            {
                "id": "read_specific_item",
                "title":{
                    "en": "Read a specific Item from RSS Feed",
                    "nl": "Lees een specifiec item uit een RSS feed voor"
                },
                "args":[
                    {
                    "name":"url",
                    "type":"text",
                    "placeholder":{
                        "en":"RSS Address",
                        "nl":"RSS Address"
                    }
                    },
                    {
                    "name":"articlenumber",
                    "type":"number",
                    "min": 0,
                    "max": 99,
                    "placeholder":{
                        "en":"Index of the item to read",
                        "nl":"Index van het artikel dat voorgelezen wordt."
                    }
                },
                {
                    "name":"whattoread",
                    "type":"dropdown",
                    "placeholder":{
                        "en":"What do you want to hear",
                        "nl":"Wat wil je horen?"
                    },
                    "values":[
                        {
                            "id":"1",
                            "label":{
                                "en":"Title",
                                "nl":"Titel"
                            }
                        },
                        {
                            "id":"2",
                            "label":{
                                "en":"Description",
                                "nl":"Omschrijving"
                            }
                        },
                        {
                            "id":"3",
                            "label":{
                                "en":"Title and description",
                                "nl":"Titel en omschrijving"
                            }
                        }
                    ]
                }]
            },

            {
                "id":"read_feed",
                "title":{
                    "en":"Read RSS feed titles",
                    "nl":"Lees RSS feed titels voor"
                },
                "args":[{
                    "name":"url",
                    "type":"text",
                    "placeholder":{
                        "en":"RSS Address",
                        "nl":"RSS Address"
                    }
                },
                {
                    "name":"articlecount",
                    "type":"number",
                    "min": 1,
                    "max": 25,
                    "placeholder":{
                        "en":"Number of articles to read",
                        "nl":"Aantal artikelen voor lezen"
                    }
                },
                {
                    "name":"whattoread",
                    "type":"dropdown",
                    "placeholder":{
                        "en":"What do you want to hear",
                        "nl":"Wat wil je horen?"
                    },
                    "values":[
                        {
                            "id":"1",
                            "label":{
                                "en":"Title",
                                "nl":"Titel"
                            }
                        },
                        {
                            "id":"2",
                            "label":{
                                "en":"Description",
                                "nl":"Omschrijving"
                            }
                        },
                        {
                            "id":"3",
                            "label":{
                                "en":"Title and description",
                                "nl":"Titel en omschrijving"
                            }
                        }
                    ]
                    
                }]
            }
            
        ]
    }
}